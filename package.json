{
  "name": "digital-citizenship-functions",
  "version": "0.39.0-SNAPSHOT",
  "description": "Implementation of the Public API V1, part of the Digital Citizenship platform",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:teamdigitale/digital-citizenship-functions.git"
  },
  "author": "Team per la Trasformazione Digitale, AgID",
  "license": "MIT",
  "scripts": {
    "build:tsc": "tsc",
    "build:tsc-noemit": "tsc --noEmit",
    "build": "npm-run-all generate:models generate:templates build:tsc",
    "lint": "tslint -p . -c tslint.json -t verbose",
    "prettify": "prettier --write './**/*.ts'",
    "test": "gulp test",
    "generate:models:public_api_v1": "gen-api-models --api-spec ./api/public_api_v1.yaml --out-dir ./lib/api/definitions --ts-spec-file ./lib/api/public_api_v1.ts",
    "generate:models:admin_api": "gen-api-models --api-spec ./api/admin_api.yaml --out-dir ./lib/api/definitions --ts-spec-file ./lib/api/admin_api.ts",
    "generate:models": "rimraf lib/api && mkdir -p lib/api/definitions && npm-run-all generate:models:public_api_v1 generate:models:admin_api",
    "generate:templates": "gulp generate:templates"
  },
  "dependencies": {
    "@types/documentdb": "^1.10.2",
    "@types/express": "^4.0.36",
    "@types/fs-extra": "^4.0.2",
    "@types/helmet": "^0.0.37",
    "@types/html-to-text": "^1.4.31",
    "@types/node": "^6.0.0",
    "@types/nodemailer": "^4.3.1",
    "@types/superagent": "^3.5.6",
    "@types/validator": "^6.3.0",
    "@types/vfile": "^2.2.1",
    "@types/winston": "^2.3.1",
    "applicationinsights": "^0.22.0",
    "azure-function-express": "^1.2.2",
    "azure-functions-types": "^0.1.1",
    "azure-storage": "^2.8.0",
    "cidr-matcher": "^1.0.5",
    "documentdb": "^1.12.2",
    "dotenv": "^5.0.1",
    "express": "^4.15.3",
    "fp-ts": "^1.0.0",
    "fs-extra": "^4.0.1",
    "helmet": "^3.12.0",
    "helmet-csp": "^2.5.1",
    "html-to-text": "^3.3.0",
    "io-ts": "^1.0.5",
    "italia-ts-commons": "^1.0.0",
    "json-set-map": "^1.0.2",
    "nodemailer": "^4.6.4",
    "referrer-policy": "^1.1.0",
    "rehype-stringify": "^3.0.0",
    "remark-parse": "^4.0.0",
    "remark-rehype": "^3.0.0",
    "request-ip": "^2.0.2",
    "superagent": "^3.8.2",
    "typescript": "^2.8.0",
    "ulid": "^2.2.2",
    "unified": "^6.1.5",
    "validator": "^9.4.1",
    "vfile": "^2.2.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "@types/nunjucks": "^3.0.0",
    "@types/prettier": "^1.6.1",
    "@types/swagger-parser": "^4.0.2",
    "@types/swagger-schema-official": "^2.0.6",
    "azure-functions-pack": "^1.0.0",
    "danger": "^3.1.7",
    "danger-plugin-digitalcitizenship": "^0.2.0",
    "gulp": "^3.9.1",
    "gulp-git": "^2.4.2",
    "gulp-json-editor": "^2.2.1",
    "gulp-rename": "^1.2.2",
    "gulp-run": "^1.7.1",
    "gulp-text-simple": "^0.4.1",
    "italia-utils": "^2.1.0",
    "jest": "^22.0.0",
    "jest-mock-express": "^0.1.1",
    "mjml": "^3.3.5",
    "nodemailer-mock-transport": "^1.3.0",
    "npm-run-all": "^4.1.1",
    "nunjucks": "^3.1.2",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "run-sequence": "^2.2.0",
    "semver": "^5.4.1",
    "swagger-parser": "^3.4.2",
    "ts-jest": "^22.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-immutable": "^4.5.4",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-sonarts": "^1.6.0",
    "typestrict": "^0.0.6",
    "yargs": "^11.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!azure-functions-types)"
    ],
    "testMatch": [
      "**/__tests__/*.ts"
    ]
  }
}
