{
  "name": "digital-citizenship-functions",
  "version": "0.1.0",
  "description": "Implementation of the Public API V1, part of the Digital Citizenship platform",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:teamdigitale/digital-citizenship-functions.git"
  },
  "author": "Team per la Trasformazione Digitale, AgID",
  "license": "MIT",
  "scripts": {
    "build:tsc": "tsc",
    "build:tsc-noemit": "tsc --noEmit",
    "build": "npm-run-all generate:templates build:tsc",
    "lint": "tslint -p . -c tslint.json",
    "prettify": "prettier --write './**/*.ts'",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "generate:models": "ts-node ./api/generate_models.ts",
    "generate:templates": "gulp mjml"
  },
  "dependencies": {
    "@types/documentdb": "^1.10.2",
    "@types/express": "^4.0.36",
    "@types/fs-extra": "^4.0.2",
    "@types/html-to-text": "^1.4.31",
    "@types/js-yaml": "^3.9.1",
    "@types/node": "^6.0.0",
    "@types/nodemailer": "^3.1.1",
    "@types/validator": "^6.2.3",
    "@types/vfile": "^2.2.1",
    "@types/winston": "^2.3.1",
    "applicationinsights": "^0.22.0",
    "azure-function-express": "^1.2.2",
    "azure-functions-types": "^0.1.1",
    "azure-storage": "^2.5.0",
    "codice-fiscale-italiano": "^1.0.1",
    "documentdb": "^1.12.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "fs-extra": "^4.0.1",
    "html-to-text": "^3.3.0",
    "js-yaml": "^3.10.0",
    "nodemailer": "^4.0.1",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "rehype-stringify": "^3.0.0",
    "remark-parse": "^4.0.0",
    "remark-rehype": "^2.0.1",
    "ts-is": "^1.0.0",
    "ts-option": "^1.1.4",
    "typescript": "^2.5.2",
    "ulid": "^1.0.0",
    "unified": "^6.1.5",
    "validator": "^8.2.0",
    "vfile": "^2.2.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/nunjucks": "^0.0.33",
    "@types/prettier": "^1.6.1",
    "@types/swagger-parser": "^4.0.2",
    "@types/swagger-schema-official": "^2.0.6",
    "gulp": "^3.9.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-rename": "^1.2.2",
    "gulp-text-simple": "^0.4.1",
    "jest": "^21.0.2",
    "jest-mock-express": "^0.1.1",
    "mjml": "^3.3.5",
    "nodemailer-mock-transport": "^1.3.0",
    "npm-run-all": "^4.1.1",
    "nunjucks": "^3.0.1",
    "prettier": "^1.7.0",
    "shelljs": "^0.7.8",
    "swagger-parser": "^3.4.2",
    "ts-jest": "^21.0.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-immutable": "^4.1.0",
    "tslint-plugin-prettier": "^1.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!azure-functions-types)"
    ],
    "testMatch": [
      "**/__tests__/*.ts"
    ],
    "mapCoverage": true
  }
}
